{
  "name": "lerp-color",
  "description": "A simple utility for interpolating between two colors.",
  "version": "0.0.1",
  "scripts": {
    "compile": "npm run lint && rm -rf dist/lib && npm run ts:es6 && npm run ts:es5",
    "ts:es6": "tsc --build tsconfig.json",
    "ts:es5": "tsc --build tsconfig.es5.json",
    "lint": "eslint . --ext .ts",
    "readme": "node bin/generateReadme.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teoMiesiac/lerp-color.git"
  },
  "keywords": [
    "javascript",
    "utils",
    "utilities"
  ],
  "author": "Tadeusz Miesiac",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teoMiesiac/lerp-color/issues"
  },
  "homepage": "https://github.com/teoMiesiac/lerp-color#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "coveralls": "^3.1.0",
    "ejs": "^3.1.5",
    "jest": "^29.7.0",
    "js-htmlencode": "^0.3.0",
    "jsdoc-parse-plus": "^1.3.0",
    "nyc": "^15.1.0",
    "typescript": "^5.3.3"
  }
}
